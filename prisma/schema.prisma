generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rcLootItem {
  id            String   @id
  player        String
  date          DateTime
  time          DateTime
  itemId        Int
  itemString    String
  response      String
  votes         Int
  class         String
  instance      String
  boss          String
  gear1         String
  gear2         String
  responseId    String
  isAwardReason Boolean
  rollType      String
  subType       String
  equipLoc      String
  note          String
  owner         String
  itemName      String
  // bLootDBItem   blizzardDBItem? @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
